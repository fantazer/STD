@import 'rupture'
@import "variable/_function.styl"
@import "variable/_ie.styl"
@import "icon/sprite.css"
@import "variable/_default.styl"
@import "variable/_constant.styl"
@import "variable/_helper.styl"
@import "variable/_configurator.styl"
@import "variable/_grid.styl"

rupture.scale = 0 480px 768px 992px 1200px
rupture.scale-names = 'xs' 'sm' 'md' 'lg'

// Grid breakpoints
$breakpoints = {
  'xs' :  0,
  'sm' : 480px,
  'md' : 768px,
  'lg' : 992px,
  'xl' : 1200px
}

// Number of columns
$columns = 12

init($breakpoints, $columns)

body
	@extend .type--main
	font-family $v-font
	color $main-text-color
	line-height 1.6
	letter-spacing 0.01em
	height 100%
	bgi('background.png')
	background-repeat repeat 
	background-color #eeefef 
	
.main-cont
	center(1150px,10px)
.wraper-general
	f()
	fl()
	min-height 100vh
	
.container-general
	flex-grow 1
.owl-next,.owl-prev
	position absolute
	top 50%
	margin-top -5%
	color white
	font-size 40px
	cp()
.owl-carousel
	position relative
.owl-prev
	+below(768px)
		left 2%
	left 0%
.owl-next
	+below(768px)
		right 2%
	right 0%
.slider-control
	size 20
	fill grey
.owl-dots
	width 100%
	flex(mid)
	margin-top 0px
	position relative
	z-index 2000
.owl-dot
	round()
	margin 5px
	width 10px
	height 10px
	background white
	border 1px solid grey
.owl-dot.active
	background orange
	border 0
	
@import "../module/**/*"
