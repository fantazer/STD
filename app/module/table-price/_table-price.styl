.table-price
	bsh()
	th
		color #f7f9fb
		font-family Lato
		font-size 14px
		font-weight 400
		line-height 24px
		text-transform uppercase
		border 0px
		&:nth-child(1)
			width 60%
		&:nth-child(2)
			text-align center
			padding 15px
	thead
		background #282e3b 
	th,td
		padding 15px 30px
	td
		background white 
		color #717382
		font-family Lato
		border 0px
		&:nth-child(2)
			text-align center
			padding 15px
		&:nth-child(3)
			text-align center
.table-price__get
	padding 10px 15px
	border-radius 2px
	border 1px solid #848484
	color #848484
	font-size 14px
	tr(all)
	&:hover
		border 1px solid orange
		color orange
		
