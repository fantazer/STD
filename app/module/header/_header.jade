mixin header()
	//block header
	.header
		.main-cont
			.header-wrp
				a(href="/").header-logo
					img(src="img/logo-light.png", alt="")
				.header-cnt
					.header-info
						a(href="/").header-logo--small
							img(src="img/logo-light.png", alt="").header-logo--light
							img(src="img/logo-dark.png", alt="").header-logo--dark
						.header-slogan
							span Аутсорсинг и <br> лизинг персонала
						.header-time
							.header-time__el С 07:00 до 21:00 Пн - Пт
							.header-time__el С 01:00 до 08:00 Сб - Вс
						.header-contact
							.header-contact__phone 
								a(href="#") +7 495 401 73 78
							.header-contact__mail infostdgroup@strgroup.com
						a(href="#").header-call.btn--light Позвонить нам
						.header-nav__toggle
							.header-nav__toggle-el
								+icon("menu","icon")
					.header-nav__wraper
						.header-nav
							.header-nav__el.header-nav__el--active 
								a(href="#") О компании
							.header-nav__el 
								a(href="#") Расчет
							.header-nav__el 
								a(href="#") Прайс
							.header-nav__el.header-nav__el-level.header-nav__el-service
								a(href="#") Услуги
								+icon("arrow-down","icon")
								.header-nav__el-sub
									.header-nav__el-sub-col
										.header-nav__el-sub-title Разовые
										.header-nav__el-sub-el 
											a(href="#") Аренда персонала
										.header-nav__el-sub-el 
											a(href="#") Аутсорсинг персонала
										.header-nav__el-sub-el 
											a(href="#") Аутстафинг персонала
										.header-nav__el-sub-el 
											a(href="#") Подготовка выставок,банкетов, презентаций концертов
									.header-nav__el-sub-col
										.header-nav__el-sub-title Постоянные
										.header-nav__el-sub-el
											a(href="#") Лизинг персонала
										.header-nav__el-sub-el
											a(href="#") Сезонные работы
										.header-nav__el-sub-el
											a(href="#") Аутстафинг персонала
										.header-nav__el-sub-el
											a(href="#") Разгрузочные работы, подсобные работы
							.header-nav__el 
								a(href="#") Новости
							.header-nav__el 
								a(href="#") Отзывы
							.header-nav__el 
								a(href="#") Персонал
							.header-nav__el 
								a(href="#") Кейсы
							.header-nav__el 
								a(href="#") Контакты
						
	//block header end