/*! block header*/
.header 
	background white 
	padding-top 20px
	bsh()
	margin-bottom 20px
//.main-cont 
.header-wrp 
	flex(between)
	align-items flex-start
.header-logo 
	width 120px
.header-cnt 
	flex(between)
	fl()
	align-items flex-start
	width calc(97% - 120px) 
.header-info 
	flex(between)
	align-items flex-start
	width 100%
	margin-bottom 25px
.header-slogan 
	width 30%
	color #282e3b
	font-family Lato
	font-size 15px
	font-weight 400
	line-height 24px
.header-time 
	width 25%
.header-time__el 
	color #282e3b
	font-family Lato
	font-size 15px
	font-weight 400
	line-height 24px
.header-contact 
	width 25%
.header-contact__phone 
	color #282e3b
	font-family Lato
	font-size 26px
	font-weight 700
	line-height 24px
.header-contact__mail 
	color #282e3b
	font-family Lato
	font-size 15px
	font-weight 400
	line-height 24px
.header-call 
	padding 10px 30px
	background none
	color black
	box-shadow inset 0 0 0 rgba(243, 128, 12, 0.33)
	border-radius 2px
	border 2px solid #ea3d03
.header-nav 
	width 100%
	flex(between)
.header-nav__el 
	padding-bottom 25px
	display inline-block
	font-family Lato
	font-size 16px
	font-weight 400
	color #282e3b
	width 100%
	text-align center
	&:hover
		border-bottom 3px solid orange
		padding-bottom 22px
.header-nav__el--active
	color orange
	padding-bottom 22px
	border-bottom 3px solid orange
	
/*!block header end */