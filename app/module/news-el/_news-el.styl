.container__news 
	flex(between)
	justify-content flex-start
	fw()
.news-el 
	+below(768px)
		width 32%
		height 300px
	+below(640px)
		width 100%
		height auto
	@extend .box
	f()
	fw()
	width 24%
	margin-right 1%
	padding 20px
	height 400px
	tr(all)
	&:hover
		background #F7F7F7 
.news-el__date
	 color #282e3b
	 font-family Arial
	 font-size 14px
.news-el__text 
	+below(1024px)
		font-size 14px
	+below(640px)
		margin-bottom 10px
	flex-grow 1
	min-height 85%
	color #282e3b
	font-family Lato
	font-size 18px
	font-weight 700
	tr(all)
	&:hover
		text-decoration underline
		color orange
