// ============================ Buttons ============================

btnStyle(bg-btn,color-btn)
	background bg-btn
	color color-btn
	border 1px solid color-btn
	&:hover
		background darken(bg-btn,20)
		color color-btn

btnStyleLight(br-btn,color-btn)
	color color-btn
	border br-btn solid color-btn
	&:hover
		color darken(color-btn,20)
		border br-btn solid darken(color-btn,20)

.btn
	tr(all)
	box-shadow inset 0 0 0 rgba(243, 128, 12, 0.33)
	border-radius 2px
	border 1px solid #ea3d03
	background-image linear-gradient(130deg, #f3800c 0%, #ea3d03 100%);
	padding 15px 35px
	color white
	color #ffffff
	font-family Arial
	font-size 16px
	font-weight 700
	display inline-block
	&:hover
		cursor pointer
		background-image linear-gradient(30deg, #f3800c 0%, #ea3d03 80%); 
		color white
		
.btn--sm
	@extend .btn
	font-size 10px
	padding 5px 10px
	
.btn--md
	@extend .btn
	font-size 12px
	padding 10px 20px
	
.btn--lg
	@extend .btn
	font-size 20px
	padding 10px 30px

.btn--mobile
	@extend .btn
	+below(768px)
		width 100%
		text-align center

.btn--light
	@extend .btn
	&:hover
		background orange
		color white!important
	tr(all) 
	color black
	background none 
	
.btn--green-light
	@extend .btn
	btnStyleLight(1px,green)
	
button
	font-family $v-font

